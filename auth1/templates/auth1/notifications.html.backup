        <div class="col-lg-9 right">
            <div class="box shadow-sm rounded bg-white mb-3">
                <div class="box-title border-bottom p-3">
                    <h4 class="m-0 text-primary fw-bold">Recent Notifications   ({{total_unread_notifications}}) </h4> 
                </div>
                <div class="box-body p-0">
                    {% for notification in notifications %}

                    <div class="p-3 d-flex align-items-center border-bottom osahan-post-header">
                        <div class="dropdown-list-image mr-3">
                        </div>
                        <div class="font-weight-bold mr-3">
                            <div class="mb-2">{{ notification.message }}</div>
                            <div class="mb-2">{{ notification.creation_date }}</div>
                            <!-- <a href="#" class="text-secondary" >Mark as read</a> -->
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>

